---
const t = {
  authorsHeading: 'Про авторів',
  backBtn: 'Назад',
  footer: '© 2025 Предел петляной вечності',
  authorsText: [
    { label: 'Ідея', value: 'Colubmina' },
    { label: 'Програміст', value: 'Ravix' },
    { label: 'Сюжет', value: 'Colubmina' },
    { label: 'Персонажі', value: 'Colubmina' }
  ]
};
---

<html lang="uk">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{t.authorsHeading}</title>
<style>
@import url('https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;700&display=swap');
body {margin:0;font-family:'EB Garamond', serif;background: linear-gradient(135deg,#0f0c29,#302b63,#24243e);color:#fff;display:flex;flex-direction:column;align-items:center;justify-content:flex-start;min-height:100vh;padding:40px 20px;text-align:center;}
h1 { font-size:3rem; margin-bottom:40px; text-shadow:2px 2px 10px rgba(0,0,0,0.7);}
.card {background: rgba(255,255,255,0.05);border: 2px solid rgba(255,255,255,0.2);border-radius:20px;padding:20px 30px;margin:15px 0;width:90%;max-width:500px;text-align:left;opacity:0;transform:translateY(20px);animation: fadeInUp 0.6s forwards;}
.label { font-weight:bold; color:#ff6a00; }
.value { margin-left:10px; }
@keyframes fadeInUp { to { opacity:1; transform:translateY(0);} }
.back-btn {display:inline-block;margin-top:40px;padding:12px 28px;font-size:18px;color:#fff;background: linear-gradient(135deg, rgba(255,106,0,0.8), rgba(255,140,66,0.8));border:none;border-radius:20px;text-decoration:none;transition:all 0.3s ease;box-shadow:0 4px 10px rgba(0,0,0,0.3);}
.back-btn:hover { background: linear-gradient(135deg, rgba(255,140,66,0.9), rgba(255,180,80,0.9)); transform: translateY(-5px) scale(1.05); box-shadow: 0 10px 20px rgba(255,140,66,0.6);}
footer { margin-top:auto; font-size:0.9rem; color:rgba(255,255,255,0.6);}
@media(max-width:600px){h1{font-size:2rem;} .card{padding:15px 20px;}}
</style>
</head>
<body>
<h1>{t.authorsHeading}</h1>
{t.authorsText.map((item, index) => (
  <div class="card" style={`animation-delay:${0.2*index}s`}>
    <span class="label">{item.label}:</span>
    <span class="value">{item.value}</span>
  </div>
))}
<a class="back-btn" href="/index.uk.astro">{t.backBtn}</a>
<footer>{t.footer}</footer>
</body>
</html>
