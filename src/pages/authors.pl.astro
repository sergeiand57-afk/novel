---
const t = {
  authorsHeading: 'O autorach',
  backBtn: 'Powrót',
  footer: '© 2025 Przysięga Wiecznej Pętli',
  authorsText: [
    { label: 'Pomysł', value: 'Colubmina' },
    { label: 'Programista', value: 'Ravix' },
    { label: 'Fabuła', value: 'Colubmina' },
    { label: 'Postacie', value: 'Colubmina' }
  ]
};
---

<html lang="pl">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{t.authorsHeading}</title>
<style>
/* стили такие же как в украинской версии */
</style>
</head>
<body>
<h1>{t.authorsHeading}</h1>
{t.authorsText.map((item, index) => (
  <div class="card" style={`animation-delay:${0.2*index}s`}>
    <span class="label">{item.label}:</span>
    <span class="value">{item.value}</span>
  </div>
))}
<a class="back-btn" href="/index.pl.astro">{t.backBtn}</a>
<footer>{t.footer}</footer>
</body>
</html>
