---
const t = {
  title: 'Przysięga Wiecznej Pętli',
  mainHeading: 'Nowela "Przysięga Wiecznej Pętli"',
  mainText: 'Zanurz się w fascynującą historię, w której wydarzenia splatają się w czasie.',
  authorsHeading: 'O autorach',
  downloadBtn: 'Pobierz',
  platformAndroid: 'Android',
  platformMac: 'Mac',
  platformWin: 'Windows',
  footer: '© 2025 Przysięga Wiecznej Pętli',
  langLinks: [
    { lang:'ru', label:'RU' },
    { lang:'uk', label:'UA' },
    { lang:'en', label:'EN' },
    { lang:'pl', label:'PL' }
  ],
  downloadLinks: {
    android: 'https://www.mediafire.com/file/j1uqxtrse2fhh85/pledge_eternal_loop_android.apk/file',
    mac: 'https://www.mediafire.com/file/d4p9jf967jgv549/pledge_eternal_loop_mac.zip/file',
    win: 'https://www.mediafire.com/file/imp610bsyzmfurr/pledge_eternal_loop_win.zip/file'
  }
};
---

<html lang="pl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{t.title}</title>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* стиль такой же как и выше */
  </style>
</head>
<body>
  <div class="lang-switch">
    {t.langLinks.map(link => <a href={`/index.${link.lang}.astro`}>{link.label}</a>)}
  </div>

  <h1>{t.mainHeading}</h1>
  <p>{t.mainText}</p>

  <div class="top-buttons">
    <a href="/authors.pl.astro" class="nav-btn">{t.authorsHeading}</a>
    <button class="nav-btn" id="download-btn">{t.downloadBtn}</button>
  </div>

  <div id="download-section" class="download-section">
    <a class="download-btn" href={t.downloadLinks.android} target="_blank">{t.platformAndroid}</a>
    <a class="download-btn" href={t.downloadLinks.mac} target="_blank">{t.platformMac}</a>
    <a class="download-btn" href={t.downloadLinks.win} target="_blank">{t.platformWin}</a>
  </div>

  <footer>{t.footer}</footer>

  <script>
    const downloadBtn = document.getElementById('download-btn');
    const downloadSection = document.getElementById('download-section');
    downloadBtn.addEventListener('click', () => {
      downloadSection.classList.toggle('show');
    });
  </script>
</body>
</html>
